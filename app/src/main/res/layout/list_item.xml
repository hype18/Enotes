<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:background="@drawable/rounded_cornwe"
    android:backgroundTint="#a7008ae0"
    android:paddingBottom="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/lvtheme"
        android:layout_width="117dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_cornwe"
        android:backgroundTint="#fff825"
        android:paddingLeft="5dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="bold|italic"
        app:layout_constraintCircleRadius="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lvtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_cornwe"
        android:ems="10"
        android:maxLength="29"
        android:maxLines="3"
        app:layout_constraintStart_toStartOf="@+id/lvtheme"
        app:layout_constraintTop_toBottomOf="@+id/lvtheme" />

    <ImageView
        android:id="@+id/impimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.476"
        app:srcCompat="@android:drawable/star_big_off" />

</android.support.constraint.ConstraintLayout>
